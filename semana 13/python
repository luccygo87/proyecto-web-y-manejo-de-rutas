from flask import Flask, jsonify
from Conexión.conexion import get_connection

app = Flask(__name__)

@app.route('/')
def home():
    return "¡Hola, Mundo!"

@app.route('/test_db')
def test_db():
    try:
        conn = get_connection()
        if conn.is_connected():
            return "Conexión a MySQL exitosa"
    except Exception as e:
        return str(e)
    finally:
        conn.close()

if __name__ == '__main__':
    app.run(debug=True)